User
    ident Text
    password Text Maybe
    UniqueUser ident
    deriving Typeable
Email
    email Text
    user UserId Maybe
    verkey Text Maybe
    UniqueEmail email
    
TodoList
    title Text
    owner UserId

Task
    title Text
    done Bool default=false
    todoList TodoListId

Recipe
    recipeName Text
    ingredients [Ingredient]
    steps [Step]
    deriving Show

Ingredient
    ingredientName Text
    quantity Int
    measure Text Maybe
    deriving Show

Step
    stepName Text
    order Int
    stepDuration Duration Maybe
    deriving Eq Show

Duration
    duration Int
    durationMeasure Text
    deriving Eq Show

 -- By default this file is used in Model.hs (which is imported by Foundation.hs)
